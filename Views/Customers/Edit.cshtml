@using HairDesignStudio.ViewModels
@model HairDesignStudio.ViewModels.CustomerViewModel
@{
    ViewData["Title"] = "Müşteri Düzenle";
}

<div class="container">
    <h2 class="mb-4">Müşteri Düzenle</h2>

    <div class="row">
        <div class="col-md-8">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="CustomerName" class="form-label"></label>
                    <input asp-for="CustomerName" class="form-control" />
                    <span asp-validation-for="CustomerName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CustomerSurname" class="form-label"></label>
                    <input asp-for="CustomerSurname" class="form-control" />
                    <span asp-validation-for="CustomerSurname" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CustomerPhoneNumber" class="form-label"></label>
                    <input asp-for="CustomerPhoneNumber" class="form-control" />
                    <span asp-validation-for="CustomerPhoneNumber" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CustomerEMail" class="form-label"></label>
                    <input asp-for="CustomerEMail" class="form-control" readonly />
                    <small class="text-muted">Email adresi değiştirilemez.</small>
                </div>

                <div class="mt-3">
                    <input type="submit" value="Kaydet" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}