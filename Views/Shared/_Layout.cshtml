<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HairDesignStudio</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HairDesignStudio.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Reservations" asp-action="Index">HairDesignStudio</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if(User.Identity.IsAuthenticated){
                            if(User.IsInRole("Admin")){
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="WorkerShifts" asp-action="Index">Çalışan Vardiyaları</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Customers" asp-action="Index">Müşteriler</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Reservations" asp-action="ManageReservations">Rezervasyonlar</a>
                                </li>
                            }
                            <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Operations" asp-action="Index">Hizmetler</a>
                            </li>
                            <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Workers" asp-action="Index">Çalışanlar</a>
                            </li>
                            <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="WorkerOperations" asp-action="Index">Çalışan Yetkinlikleri</a>
                            </li>
                            <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Reservations" asp-action="Index">Rezervasyon</a>
                            </li>
                            <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="HairStyle" asp-action="Index">Saç Modeli Önerisi Al</a>
                            </li>
                            <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Reservations" asp-action="MyReservations">Rezervasyonlarım</a>
                            </li>
                        }
                        
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - HairDesignStudio - <a asp-area="" asp-controller="Reservations" asp-action="Index">Rezervasyon</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
