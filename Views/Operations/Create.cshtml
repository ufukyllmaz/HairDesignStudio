@model HairDesignStudio.Models.Operations

@{
    ViewData["Title"] = "Yeni Hizmet Ekle";
}

<h1>Yeni Hizmet Ekle</h1>

<h4>Hizmetler</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OperationName" class="control-label" ></label>
                <input asp-for="OperationName" class="form-control" />
                <span asp-validation-for="OperationName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OperationPrice" class="control-label" placeholder="İşlemin fiyatının kaç TL olduğunu giriniz."></label>
                <input asp-for="OperationPrice" class="form-control" />
                <span asp-validation-for="OperationPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OperationDuration" class="control-label" placeholder="İşlemin kaç dakikada tamamlanması gerektiği bilgisini giriniz."></label>
                <input asp-for="OperationDuration" class="form-control" />
                <span asp-validation-for="OperationDuration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Yeni Hizmet Ekle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Yeni Hizmet Ekle</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
